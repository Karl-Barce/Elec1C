@model Student
@{
}

<form asp-action="AddStudent">
    
    <div>
        <label class="mt3">First Name</label>
        <input asp-for="Firstname" class="form-control" />
    </div>
    <div>
        <label class="mt3">Last Name</label>
        <input asp-for="Lastname" class="form-control" />
    </div>

    <div>
        <label class="mt3">GPA</label>
        <input asp-for="GPA" class="form-control" />
    </div>
    <div>
        <label class="mt3">Course</label>
        <select asp-for="Course" asp-items="Html.GetEnumSelectList<Course>()" aria-label="Course" class="form-control"></select>
    </div>
    <div>
        <label class="mt3">AdmissionDate</label>
        <input asp-for="AdmissionDate" class="form-control" />
    </div>
    <div>
        <label class="mt3">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>


</form>