
@model IEnumerable<Instructor>;

<div>Instructor List</div>

<a class="btn btn-primary" asp-area="" asp-Controller="Employee" asp-action="AddInstructor">Add Instructor</a>
<table  class="table table-dark">
            
        <tr>
            <th colspan="8">Instructor</th>
        </tr>

        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>HiringDate</td>
            <td>Rank</td>
            <td>isTenured?</td>
            <td>Details</td>
            <td>Details</td>
            <td>Delete</td>
            
        </tr>
    @foreach (var instructor in Model)
    {
        
             
        

        <tr>
            <td>@instructor.Id</td>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@instructor.HiringDate</td>
            <td>@instructor.Rank</td>
            <td>@(instructor.isTenured ? "Permanent" : "probationary")</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a asp-action="EditInstructor" asp-route-id="@instructor.Id">Edit Detail</a></td>
            <td><a asp-action="DeleteInstructor" asp-route-id="@instructor.Id">Delete</a></td>
        </tr>
    }
</table>
