@model Karl_Barce_LabAct.ViewModels.LoginViewModel
@{
}
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" asp-controller="Account">
    <div class="form-group">
        <label asp-for="UserName">Username</label>
        <input asp-for="UserName" placeholder="Enter Username">
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" placeholder="Password">
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe">
        <label asp-for="RememberMe"></label>

    </div>
    <input type="submit" value="Submit" class="btn btn-primary">Submit</input>
</form>