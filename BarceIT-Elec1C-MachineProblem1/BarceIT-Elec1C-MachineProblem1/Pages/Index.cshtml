@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@{
    DateTime bDate = Convert.ToDateTime("03/09/2003");
    DateTime tDate = DateTime.Today;
    int age = tDate.Year - bDate.Year;

    if (bDate > tDate.AddYears(-age))
    {
        age--;
    }
    var FirstName = "Karl";
    var LastName = "Barce";
    var Email = "karlmanuel.barce.cics@ust.edu.ph";
    string[] email = Email.Split('@');
    bool isTenured = true;
    int SalaryPerHour = 5;
    int SalaryPerDay = 0;
    int SalaryPerMonth = 0;
    var Status = "";
    int Prelim = 92;
    int Final = 90;
    int Semestral = (Prelim + Final) / 2;
    var Transmuted = "";
    if(96 <= Semestral && Semestral <= 100)
    {
        Transmuted = "1.00";
    }
    else if (94 <= Semestral && Semestral <= 95)
    {
        Transmuted = "1.25";
    }
    else if (92 <= Semestral && Semestral <= 93)
    {
        Transmuted = "1.50";
    }
    else if (89 <= Semestral && Semestral <= 91)
    {
        Transmuted = "1.75";
    }
    else if (87 <= Semestral && Semestral <= 88)
    {
        Transmuted = "2.00";
    }
    else if (84 <= Semestral && Semestral <= 86)
    {
        Transmuted = "2.25";
    }
    else if (82 <= Semestral && Semestral <= 83)
    {
        Transmuted = "2.50";
    }
    else if (79 <= Semestral && Semestral <= 81)
    {
        Transmuted = "2.75";
    }
    else if (75 <= Semestral && Semestral <= 78)
    {
        Transmuted = "3.0";
    }
    else if (Semestral < 75)
    {
        Transmuted = "5.0";
    }

    if (isTenured) 
    {
        Status = "permanent";
        SalaryPerDay = SalaryPerHour * 8;
        SalaryPerMonth = (SalaryPerDay * 30) + 500;
    }
    else
    {
        Status = "Probationary";
        SalaryPerDay = SalaryPerHour * 8;
        SalaryPerMonth = SalaryPerDay * 30;
    }

}

    <div class="box">
